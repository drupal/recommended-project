{#
/**
 * @file
 * Frontend override to display a node.
 */
#}

{% block node_attach %}
  {{ attach_library('frontend/n--card') }}
{% endblock %}

{% set classes = [
  'node',
  'node--' ~ node.bundle|clean_class,
  view_mode ? 'node--' ~ view_mode|clean_class,
  view_mode ? 'node--' ~ node.bundle|clean_class ~ '--' ~ view_mode|clean_class,
  'card',
] %}

<article{{attributes.addClass(classes)}}>
  {{ title_prefix }}
  {{ title_suffix }}
  <a class="node--link" href="{{ url }}" rel="bookmark">
    {{ content.field_image }}

    <div{{content_attributes.addClass('node__content','card-body')}}>
      {% block node_content %}
        {{ content|without('field_image') }}

        <h2{{title_attributes.addClass('h5','mb-0')}}>
          {{- label.0 -}}
        </h2>
      {% endblock %}
    </div>
  </a>
</article>
